# Brewfile - Homebrew packages
# Install: brew bundle --file=~/dotfiles/Brewfile

# Editor
brew "neovim"

# Search tools
brew "ripgrep"
brew "fd"
brew "fzf"

# Modern CLI replacements
brew "eza"       # ls
brew "bat"       # cat
brew "delta"     # diff

# Shell
brew "starship"  # prompt
brew "zoxide"    # smart cd
brew "tmux"      # terminal multiplexer

# Git
brew "lazygit"
brew "gh"
brew "ghq"

# Version manager
brew "mise"
